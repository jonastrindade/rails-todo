
<%= form_with model: @task, url: products_todo_tasks_path, method: :post, local: true, class: "max-w-sm mx-auto" do |f| %>
  <h1 class="block mb-2 text-sm font-medium">Create new Todo</h1>
  <div class="mb-5 mt-10">
    <label for="email" class="block mb-2 text-sm font-medium">Title</label>
    <%= f.text_field :title, required: true, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-grey-600 focus:border-blue-500 block w-full p-2.5" %>
  </div> 


  <div class="mb-5">
    <label for="password" class="block mb-2 text-sm font-medium">Description</label>
    <%= f.text_area :description, required: true, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-grey-600 focus:border-blue-500 block w-full p-2.5" %>
  </div>

  <div class="mb-5">
    <label for="repeat-password" class="block mb-2 text-sm font-medium">Deadline</label>
    <%= f.date_field :deadline, required: true, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-grey-600 focus:border-blue-500 block w-full p-2.5" %>
  </div>

  <%= f.submit class: "px-4 py-2 border-gray-200 dark:bg-gray-600 text-white text-sm font-medium rounded-lg shadow hover:dark:bg-gray-400 focus:outline-none focus:ring focus:ring-blue-300"%>

<% end %>