<h1 class="text-2xl text-gray-700">Todo Analysis (last 6 months)</h1>
<h4 class="text-lg text-gray-700 mt-10">Todo stats</h4>
<div class="grid gap-7 sm:grid-cols-2 lg:grid-cols-4 mt-10">
  <div class="flex items-center justify-between p-5 bg-slate-50 rounded shadow-sm">
    <div>
      <div class="text-sm text-gray-400">Total to-finish in last 6 months</div>
      <div class="flex items-center pt-1">
        <div class="text-xl font-medium text-indigo-400"><%= @tasks_status_count.first.to_finish %></div>
      </div>
    </div>
    <div class="text-gray-300">
      <svg class="w-8 h-8" fill="none" viewBox="0 0 51 51">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M48.875 12.75L28.687 32.938 18.063 22.312 2.126 38.25"></path>
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M36.125 12.75h12.75V25.5"></path>
      </svg>
    </div>
  </div>
  <div class="flex items-center justify-between p-5 bg-slate-50 rounded shadow-sm">
    <div>
      <div class="text-sm text-gray-400">Total finished in last 6 months</div>
      <div class="flex items-center pt-1">
        <div class="text-xl font-medium text-indigo-400"><%= @tasks_status_count.second.finished %></div>
      </div>
    </div>
    <div class="text-gray-300">
      <svg class="w-8 h-8" fill="none" viewBox="0 0 51 51">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M48.875 12.75L28.687 32.938 18.063 22.312 2.126 38.25"></path>
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M36.125 12.75h12.75V25.5"></path>
      </svg>
    </div>
  </div>
  <div class="flex items-center justify-between p-5 bg-slate-50 rounded shadow-sm">
    <div>
      <div class="text-sm text-gray-400">Total to-finish expired in last 6 months</div>
      <div class="flex items-center pt-1">
        <div class="text-xl font-medium text-indigo-400"><%= @tasks_status_count.first.to_finish_deadline_expired %></div>
      </div>
    </div>
    <div class="text-gray-300">
      <svg class="w-8 h-8" fill="none" viewBox="0 0 47 46">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M41.536 30.456a19.21 19.21 0 01-5.675 7.4 19.771 19.771 0 01-8.557 3.937c-3.138.608-6.38.455-9.444-.447a19.673 19.673 0 01-8.129-4.725 19.1 19.1 0 01-4.92-7.902 18.775 18.775 0 01-.564-9.237 18.98 18.98 0 013.923-8.419 19.538 19.538 0 017.497-5.639"></path>
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M43.083 23c0-2.517-.506-5.01-1.49-7.335a19.142 19.142 0 00-4.246-6.218 19.617 19.617 0 00-6.353-4.155A19.953 19.953 0 0023.5 3.833V23h19.583z"></path>
      </svg>
    </div>
  </div>
  <div class="flex items-center justify-between p-5 bg-slate-50 rounded shadow-sm">
    <div>
      <div class="text-sm text-gray-400">Total to-finish with deadline foward in last 6 months</div>
      <div class="flex items-center pt-1">
        <div class="text-xl font-medium text-indigo-400"><%= @tasks_status_count.first.to_finish_deadline_expires_foward %></div>
      </div>
    </div>
    <div class="text-gray-300">
      <svg class="w-8 h-8" fill="none" viewBox="0 0 47 46">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M41.536 30.456a19.21 19.21 0 01-5.675 7.4 19.771 19.771 0 01-8.557 3.937c-3.138.608-6.38.455-9.444-.447a19.673 19.673 0 01-8.129-4.725 19.1 19.1 0 01-4.92-7.902 18.775 18.775 0 01-.564-9.237 18.98 18.98 0 013.923-8.419 19.538 19.538 0 017.497-5.639"></path>
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M43.083 23c0-2.517-.506-5.01-1.49-7.335a19.142 19.142 0 00-4.246-6.218 19.617 19.617 0 00-6.353-4.155A19.953 19.953 0 0023.5 3.833V23h19.583z"></path>
      </svg>
    </div>
  </div>
</div>
<div class="mt-20">
  <h4 class="text-lg text-gray-700">Created vs Finished</h4>
  <div class="mb-4 flex items-center justify-between mt-10">
    <%= line_chart @tasks_analysis_by_month, discrete: true, xtitle: "Months", ytitle: "Count" %>
  </div>
</div>