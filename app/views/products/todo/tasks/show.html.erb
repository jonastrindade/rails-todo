<div class="mx-auto">
  <h1 class="block mb-2 text-sm font-medium">View Todo</h1>
  <div class="mb-5 mt-10">
    <label class="block mb-2 text-sm font-medium">Title</label>
    <input type="text" maxlength="2" disabled=true value="<%= @task.title %>" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-grey-600 focus:border-blue-500 block w-full p-2.5"/>
  </div> 


  <div class="mb-5">
    <label  class="block mb-2 text-sm font-medium">Description</label>
    <textarea type="text" id="first_name" disabled=true class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-grey-600 focus:border-blue-500 block w-full p-2.5"> <%= @task.description %> </textarea>
  </div>

  <div class="mb-5">
    <label class="block mb-2 text-sm font-medium">Deadline</label>
    <input type="text" id="first_name" disabled=true value=<%= @task.deadline.strftime("%m/%d/%Y") %> class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-grey-600 focus:border-blue-500 block w-full p-2.5"/>
  </div>

  <div class="flex justify-between">
    <%= link_to 'Back to list', products_todo_tasks_path, class: "px-4 py-2 border-gray-200 dark:bg-gray-600 text-white text-sm font-medium rounded-lg shadow hover:dark:bg-gray-400 focus:outline-none focus:ring focus:ring-blue-300"%>
    <%= link_to 'Update Todo', edit_products_todo_task_path(@task), class: "px-4 py-2 border-gray-200 dark:bg-gray-600 text-white text-sm font-medium rounded-lg shadow hover:dark:bg-gray-400 focus:outline-none focus:ring focus:ring-blue-300"%>
  </div>
</div>
